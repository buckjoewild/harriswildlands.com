modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist", "package-lock.json"]

[nix]
channel = "stable-24_05"
packages = ["zip", "python311", "python311Packages.websockets"]

[[ports]]
localPort = 5000
externalPort = 80
name = "BruceOps App"

[[ports]]
localPort = 4008
externalPort = 8080
name = "MUD Server"

[env]
PORT = "5000"
MUD_PORT = "4008"
NODE_ENV = "production"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "start-replit.sh"]
build = ["npm", "run", "build"]

[agent]
integrations = ["javascript_log_in_with_replit:2.0.0", "google-drive:1.0.0"]
